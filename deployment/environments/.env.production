# Production Environment Configuration
NODE_ENV=production

# Frontend Configuration
VITE_API_URL=https://api.workflow-management.com
VITE_FILE_SERVER_URL=https://files.workflow-management.com
VITE_WS_URL=wss://api.workflow-management.com/ws
VITE_APP_NAME=Workflow Management System
VITE_APP_VERSION=1.0.0

# Backend Configuration
BACKEND_PORT=8000
FLASK_ENV=production
SECRET_KEY=REPLACE_WITH_SECURE_PRODUCTION_SECRET
DEBUG=false
CORS_ORIGINS=https://workflow-management.com,https://www.workflow-management.com

# Database Configuration (use AWS Secrets Manager or environment variables)
DATABASE_URL=postgresql://username:password@production-db-host:5432/workflow_management
POSTGRES_DB=workflow_management
POSTGRES_USER=workflow_prod_user
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# Redis Configuration
REDIS_URL=redis://production-redis-host:6379

# File Storage Configuration
FILE_SERVER_PORT=3001
UPLOAD_MAX_SIZE=104857600
UPLOAD_DIR=/var/uploads
S3_BUCKET=workflow-files-production
S3_REGION=us-east-1
CDN_URL=https://cdn.workflow-management.com

# Device Executor Configuration
DEVICE_EXECUTOR_PORT=8001
RUST_LOG=warn

# Logging Configuration
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_FILE=/var/log/workflow/app.log

# Monitoring & Analytics
SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
ANALYTICS_ENABLED=true
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
MOCK_DEVICES=false

# Security Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_WINDOW_MS=900000
CSRF_PROTECTION=true
HELMET_ENABLED=true

# SSL/TLS Configuration
SSL_REDIRECT=true
HSTS_MAX_AGE=31536000
SECURE_COOKIES=true

# Cache Configuration
CACHE_TTL=3600
STATIC_CACHE_TTL=86400

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Performance Configuration
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
WORKER_PROCESSES=auto