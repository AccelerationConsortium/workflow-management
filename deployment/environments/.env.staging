# Staging Environment Configuration
NODE_ENV=staging

# Frontend Configuration
VITE_API_URL=https://api-staging.workflow-management.com
VITE_FILE_SERVER_URL=https://files-staging.workflow-management.com
VITE_WS_URL=wss://api-staging.workflow-management.com/ws
VITE_APP_NAME=Workflow Management System (Staging)
VITE_APP_VERSION=1.0.0-staging

# Backend Configuration
BACKEND_PORT=8000
FLASK_ENV=staging
SECRET_KEY=staging-secret-key-replace-with-secure-value
DEBUG=false
CORS_ORIGINS=https://staging.workflow-management.com

# Database Configuration (use environment variables in actual deployment)
DATABASE_URL=postgresql://username:password@staging-db-host:5432/workflow_management_staging
POSTGRES_DB=workflow_management_staging
POSTGRES_USER=workflow_staging_user
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# Redis Configuration
REDIS_URL=redis://staging-redis-host:6379

# File Storage Configuration
FILE_SERVER_PORT=3001
UPLOAD_MAX_SIZE=52428800
UPLOAD_DIR=/var/uploads
S3_BUCKET=workflow-files-staging
S3_REGION=us-east-1

# Device Executor Configuration
DEVICE_EXECUTOR_PORT=8001
RUST_LOG=info

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ANALYTICS_ENABLED=true

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=true
MOCK_DEVICES=false

# Security Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# SSL/TLS Configuration
SSL_REDIRECT=true
HSTS_MAX_AGE=31536000